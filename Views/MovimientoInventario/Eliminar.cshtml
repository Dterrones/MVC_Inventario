@model MovimientoInventarioModel

<h1>Eliminar Movimiento</h1>
<h3>¿Estás seguro que deseas eliminar el siguiente movimiento?</h3>
<dl class="row">
    <dt class="col-sm-2">COD CIA</dt>
    <dt class="col-sm-10">@Model.COD_CIA</dt>

</dl>
<form asp-action="EliminarConfirmado" method="post" asp-route-codcia="@Model.COD_CIA">
    <input asp-for="COD_CIA" type="hidden" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>